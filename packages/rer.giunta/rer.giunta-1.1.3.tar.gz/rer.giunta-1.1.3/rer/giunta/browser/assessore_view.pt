<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rer.giunta">

<metal:block fill-slot="content-core"
             tal:define="selected_tab request/tab|nothing">
  <tal:biography condition="python:(selected_tab=='biography' or not selected_tab) and here.getBiography()">
    <h2 i18n:translate="rer_giunta_biography">Biography</h2>
    <span tal:replace="structure here/getBiography">Bio</span>
  </tal:biography>
  <tal:delegation condition="python:selected_tab=='delegation' and here.getDelegationsDescription()">
    <h2 i18n:translate="rer_giunta_delegations">Delegations</h2>
    <span tal:replace="structure here/getDelegationsDescription">Delegations</span>
  </tal:delegation>
</metal:block>
</html>
