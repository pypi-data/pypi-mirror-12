.g-field-container
  .g-job-info-key.inline(property="title") Title:
  .g-job-info-value.inline(property="title")= job.get('title')
.g-field-container
  .g-job-info-key.inline(property="_id") Job ID:
  .g-job-info-value.inline(property="_id")= job.get('_id')
.g-field-container
  .g-job-info-key.inline(property="status") Status:
  .g-job-status-badge(status="#{statusText.toLowerCase()}")
    i(class="#{girder.jobs_JobStatus.icon(job.get('status'))}")
    |  #{statusText}
.g-field-container
  .g-job-info-key.inline(property="created") Created:
  .g-job-info-value.inline(property="created")= girder.formatDate(job.get('created'), girder.DATE_SECOND)
.g-field-container
  .g-job-info-key.inline(property="when") Scheduled start:
  .g-job-info-value.inline(property="when")= girder.formatDate(job.get('when'), girder.DATE_SECOND)
if job.get('updated')
  .g-field-container
    .g-job-info-key.inline(property="updated") Last update:
    .g-job-info-value.inline(property="updated")= girder.formatDate(job.get('updated'), girder.DATE_SECOND)
if job.get('log')
  .g-job-info-key(property="log") Log output:
  .g-monospace-viewer(property="log")= job.get('log')
if job.get('kwargs')
  .g-job-info-key(property="kwargs") Keyword arguments:
  .g-monospace-viewer(property="kwargs")= JSON.stringify(job.get('kwargs'), null, '  ')
