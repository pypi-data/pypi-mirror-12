                <param name="nodes" style="query" required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>List of webhook records where each record contains fields like
                            <code>id</code>, <code>name</code>, <code>user</code>, <code>project></code>,
                            <code>domain</code>, <code>obj_id</code>, <code>obj_type</code>,
                            <code>action</code>, <code>credential</code>, <code>params</code>,
                            <code>created_time</code> and <code>deleted_time</code> etc.
                        </para>
                    </wadl:doc>
                </param>
            </representation>
        </response>
    </method>
    <method name="POST" id="webhook_create">
