    <method name="GET" id="webhook_list">
        <wadl:doc xml:lang="EN" title="List Webhooks" xmlns="http://docbook.org/ns/docbook">
            <para role="shortdesc">List webhooks.</para>
        </wadl:doc>
        <request>
            <representation mediaType="application/xml">
                <param name="show_deleted" style="query" required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>Specifies whether deleted webhooks are to be listed.</para>
                    </wadl:doc>
                </param>
                <param name="filters" style="query" required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>
                            A list of key-value pairs for filtering the returned nodes.
                            The valid filter keys are <code>name</code>, <code>user</code>,
                            <code>obj_type</code>, <code>obj_id</code>, <code>action</code>.
                        </para>
                    </wadl:doc>
                </param>
                <param name="limit" style="query" required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>
                            Limits the number of webhooks that appear on one invocation to this
                            value. The typical pattern of <code>limit</code> and <code>marker</code>
                            is to make an initial limited request and then to use the
                            <code>id</code> of the last webhook from the response as the
                            <code>marker</code> parameter in a subsequent limited request.
                        </para>
                    </wadl:doc>
                </param>
                <param name="marker" style="query" required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>
                            Specifies the <code>id</code> of the last-seen webhook. The typical
                            pattern of <code>limit</code> and <code>marker</code> is to make
                            an initial limited request and then to use the <code>id</code> of
                            the last-seen webhook from the response as the <code>marker</code>
                            parameter in a subsequent limited request.
                        </para>
