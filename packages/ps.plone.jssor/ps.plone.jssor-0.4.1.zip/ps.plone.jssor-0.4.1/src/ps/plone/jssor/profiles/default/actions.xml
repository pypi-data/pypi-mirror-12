<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="ps.plone.jssor">

  <object name="object" meta_type="CMF Action Category">
    <object name="slider-config-above" meta_type="CMF Action">
      <property name="available_expr">object/@@slider-status-above/active</property>
      <property name="description" i18n:translate="">Configure Listing Slider (top)</property>
      <property name="icon_expr"></property>
      <property name="i18n_domain">ps.plone.jssor</property>
      <property name="link_target"></property>
      <property name="permissions">
        <element value="Modify portal content" />
      </property>
      <property name="title" i18n:translate="">Configure Listing Slider (top)</property>
      <property name="url_expr">string:${object_url}/@@slider-config-above</property>
      <property name="visible">True</property>
    </object>
  </object>

  <object name="object_buttons" meta_type="CMF Action Category">
    <!-- Slider Action Buttons -->
    <!-- ===================== -->
    <object name="featuredlisting-collection-activate-above" meta_type="CMF Action">
      <property name="available_expr">object/@@slider-status-above/can_activate</property>
      <property name="description" i18n:translate="">Activate Listing Slider (top)</property>
      <property name="icon_expr"></property>
      <property name="i18n_domain">ps.plone.jssor</property>
      <property name="link_target"></property>
      <property name="permissions">
        <element value="Modify portal content" />
      </property>
      <property name="title" i18n:translate="">Activate Listing Slider (top)</property>
      <property name="url_expr">string:${object_url}/@@slider-toggle-above</property>
      <property name="visible">True</property>
    </object>

    <object name="featuredlisting-collection-deactivate-above" meta_type="CMF Action">
      <property name="available_expr">object/@@slider-status-above/active</property>
      <property name="description" i18n:translate="">Deactivate Listing Slider (top)</property>
      <property name="icon_expr"></property>
      <property name="i18n_domain">ps.plone.jssor</property>
      <property name="link_target"></property>
      <property name="permissions">
      <element value="Modify portal content" />
      </property>
      <property name="title" i18n:translate="">Deactivate Listing Slider (top)</property>
      <property name="url_expr">string:${object_url}/@@slider-toggle-above</property>
      <property name="visible">True</property>
    </object>
    
  </object>
</object>