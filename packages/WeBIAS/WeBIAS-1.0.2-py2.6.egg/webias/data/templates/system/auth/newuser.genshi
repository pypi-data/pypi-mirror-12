<html xmlns:py="http://genshi.edgewall.org/" encoding="utf-8"
xmlns:xi="http://www.w3.org/2001/XInclude">
  <xi:include href="${base}" />
  <head>
    <title>User registration</title>
    <link rel="StyleSheet" href="${media}/form.css" type="text/css" media="all" />
  </head>
  <body>
    <div class="center">

      <form name="passwd" enctype="multipart/form-data" action="submit" method="post"> <div class="login">
		<div class="element">
			<span class="title">User registration</span>
		</div>
		<div class="element" py:if="message!=None">
			<span class="message">${message}</span>
		</div>

		<div class="fields">
		<div class="element">
			<span class="label">Login:</span>
			<span class="component"><input name="login" length="10"/></span>
		</div>

		<div class="element">
			<span class="label">E-mail:</span>
			<span class="component"><input name="email" length="10"/></span>
		</div>

		<div class="element">
			<span class="label">Password:</span>
			<span class="component"><input type="password" name="newpass" length="10"/></span>
		</div>

		<div class="element">
			<span class="label">Repeat password:</span>
			<span class="component"><input type="password" name="verpass" length="10"/></span>
		</div>
		</div>
		<div class="element submit">
			<button type="submit">Register</button>
		</div>
	  </div></form>
    </div>
  </body>
</html>

