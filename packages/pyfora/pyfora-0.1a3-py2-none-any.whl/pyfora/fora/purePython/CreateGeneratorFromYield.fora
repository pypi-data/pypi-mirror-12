//pyfora replacement for the ConvertYieldToIter axiom
object {
    ...(valueToYield, continuation) {
        object {
            ...(`Iter) { self };
            ...(`Next, arg) {
                //note that we need to convert the None that the 
                //current yield expressions produce into a nothing so that
                //the FORA iteration model will know what to do
                match (continuation`(arg)) with 
                  (PyNone(...)) { (valueToYield, nothing) }
                  (x) { (valueToYield, x) }
                };
            
            __str__: PyBoundMethod(self, fun(self) { PyString("<generator object>") });

            __iter__: PyBoundMethod(self, fun(self) { for x in self { yield x } });

            mixin PyObjectBase;
            }
        }
    }
